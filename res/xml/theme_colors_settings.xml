<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/theme_colors_settings_title">

    <Preference
        android:key="test_notifications"
        android:title="@string/test_notifications_title"
        android:summary="@string/test_notifications_summary">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="net.darkkatrom.dknotificationtest.MainActivity"
            android:targetPackage="net.darkkatrom.dknotificationtest" />
    </Preference>

    <PreferenceCategory
        android:key="theme_colors_cat_theme_general"
        android:title="@string/theme_colors_cat_theme_general_title">

        <Preference
            android:key="notification_theme_change_info"
            android:title="@string/notification_theme_change_info_title"
            android:summary="@string/notification_theme_change_info_summary"
            android:enabled="false"
            android:shouldDisableView="false" />

        <ListPreference
            android:key="day_night_mode"
            android:title="@string/day_night_mode_title"
            android:summary="@string/list_preference_default_summary"
            android:entries="@array/day_night_mode_entries"
            android:entryValues="@array/day_night_mode_values" />

        <ListPreference
            android:key="night_theme"
            android:title="@string/night_theme_title"
            android:summary="@string/list_preference_default_summary"
            android:entries="@array/night_theme_entries"
            android:entryValues="@array/night_theme_values" />

        <ListPreference
            android:key="day_theme"
            android:title="@string/day_theme_title"
            android:summary="@string/list_preference_default_summary"
            android:entries="@array/day_theme_entries"
            android:entryValues="@array/day_theme_values" />

        <SwitchPreference
            android:key="customize_colors"
            android:title="@string/customize_colors_title"
            android:summary="@string/customize_colors_summary"
            android:defaultValue="false" />

        <net.darkkatrom.dkcolorpicker.preference.ColorPickerPreference
            android:key="primary_color"
            android:title="@string/primary_color_title"
            android:summary="@string/primary_color_summary"
            app:pickerSubtitle="@string/action_bar_picker_subtitle_theme_primary"
            app:resetColor1="@color/theme_primary"
            app:defaultColor="@color/theme_primary" />

	</PreferenceCategory>

    <PreferenceCategory
        android:key="theme_colors_cat_theme_bars"
        android:title="@string/theme_colors_cat_theme_bars_title">

        <SwitchPreference
            android:key="colorize_navigation_bar"
            android:title="@string/colorize_navigation_bar_title"
            android:summary="@string/colorize_navigation_bar_summary"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="use_light_status_bar"
            android:title="@string/use_light_status_bar_title"
            android:summary="@string/use_light_status_bar_summary" />

        <SwitchPreference
            android:key="use_light_navigation_bar"
            android:title="@string/use_light_navigation_bar_title"
            android:summary="@string/use_light_navigation_bar_summary" />

	</PreferenceCategory>

    <PreferenceCategory
        android:key="theme_colors_cat_theme_apps"
        android:title="@string/theme_colors_cat_theme_apps_title">

        <PreferenceScreen
            android:key="theme_systemui_settings"
            android:title="@string/theme_systemui_settings_title"
            android:summary="@string/theme_systemui_settings_summary"
            android:fragment="net.darkkatrom.dksettings.fragments.themecolors.ThemeSystemUI" />

	</PreferenceCategory>

    <PreferenceCategory
        android:key="theme_colors_cat_colors"
        android:title="@string/theme_colors_cat_colors_title">

        <PreferenceScreen
            android:key="colors_lock_screen"
            android:title="@string/lock_screen_title"
            android:summary="@string/colors_lock_screen_summary"
            android:fragment="net.darkkatrom.dksettings.fragments.themecolors.ColorsLockScreen" />

        <PreferenceScreen
            android:key="colors_status_bar"
            android:title="@string/status_bar_title"
            android:summary="@string/colors_status_bar_summary"
            android:fragment="net.darkkatrom.dksettings.fragments.themecolors.ColorsStatusBar" />

	</PreferenceCategory>
</PreferenceScreen>
